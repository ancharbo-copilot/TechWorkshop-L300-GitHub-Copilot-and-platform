{
  "name": "GitHub Copilot Workshop",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "latest",
      "installUsingApt": "true",
      "dotnetRuntimeVersions": "6.0,8.0"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "installUsingPipx": false
    },
    "ghcr.io/azure/azure-dev/azd:latest": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-azuretools.vscode-bicep",
        "ms-vscode.vscode-github-mcp",
        "ms-vscode.vscode-azure-mcp",
        "ms-vscode.azure-copilot",
        "ms-azuretools.vscode-docker",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp"
      ]
    }
  },

  "postCreateCommand": "dotnet --list-sdks && az --version && azd version",

  "remoteUser": "vscode"
}
